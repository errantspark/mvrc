!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             90x30
!urxvt*background: rgba:0000/0000/0200/c800
!URxvt.transparent:          false
URxvt.fading:               30
! URxvt.urgentOnBell:         true
URxvt.visualBell:           false
URxvt.loginShell:           true
URxvt.internalBorder:       3
URxvt.lineSpace:            0

urxvt*transparent: true
urxvt*shading: 20
!urxvt*tintColor: #000000

URxvt*saveLines: 12000
! Fonts
!URxvt*font: xft:creep:pixelsize=15
!URxvt*boldFont:  xft:creep:pixelsize=15
! this makes it so that bold doesn't change font color
URxvt*font:  xft:ProggyCleanTTSZ:style=regular:pixelsize=16
URxvt*boldFont:  xft:ProggyCleanTTSZ:style=bold:pixelsize=16

!URxvt*font: -*-creep-*-*-*-*-*-*-*-*-*-*-*-*
!URxvt*boldFont: -*-creep-*-*-*-*-*-*-*-*-*-*-*-*
URxvt.intensityStyles: false

!URxvt.allow_bold:           false
/* URxvt.font:                 -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso8859-1 */
!URxvt*font: -xos4-terminus-medium-r-normal-*-12-120-72-72-c-60-iso10646-1
!URxvt*font: xft:Monospace:pixelsize=14
!URxvt*boldFont: xft:Monospace:pixelsize=14

! Fix font space
URxvt*letterSpace: 0

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.url-launcher:         chromium-browser

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

!!Source http://github.com/altercation/solarized

*background: #002b36
*foreground: #ffffff
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1
*highlightColor:   #ab3046

*color0: #210210
*color1: #f53441
*color2: #69e02d
*color3: #f7e731
*color4: #246fdb
*color5: #FF0090
*color6: #89c6f5
*color7: #ebead9
*color8: #788898
*color9: #ab3046
*color10: #10cc3c
*color11: #e06324
*color12: #2B2BA2
*color13: #a584bd
*color14: #00B7EB
*color15: #bAAA9f

XTerm*termName: xterm-256color
URxvt*termName: xterm-256color
